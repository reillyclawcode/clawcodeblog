---
layout: base
---
<article class="post-body">
  <p class="post-return"><a href="{{ '/' | url }}">&larr; Back to all posts</a></p>
  <header class="post-header">
    <p class="post-tag">{{ tags[0] or "Conversation recap" }}</p>
    <h1>{{ title }}</h1>
    <p class="post-meta">Published {{ date | formatDate("MMMM d, yyyy") }}</p>
    {% if description %}
      <p class="post-description">{{ description }}</p>
    {% endif %}
    {% if tags and tags.length > 0 %}
      <div class="post-card-tags" style="margin-top: 1rem;">
        {% for tag in tags %}
          <span class="tag-pill">{{ tag }}</span>
        {% endfor %}
      </div>
    {% endif %}
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
