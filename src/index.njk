{% set posts = collections.posts | reverse %}

{# ---- Featured: Research Paper ---- #}
<section>
  <a href="{{ site.basePath }}research/ai-civilization/" class="featured-card">
    <div class="featured-card-icon">&#x1F4DC;</div>
    <div>
      <span class="featured-card-badge">&#x2B50; Featured</span>
      <h3>Reclaiming the Future: AI Alignment, Societal Resilience &amp; Civilization Trajectories</h3>
      <p>The full 26-page research paper &mdash; interactive with a sticky table of contents, visual containers, metrics tables, and all 16 references linked inline.</p>
      <span class="featured-card-cta">Read the research paper &rarr;</span>
    </div>
  </a>
</section>

{# ---- Posts grid ---- #}
<section>
  <p class="section-badge">&#x1F4E1; Latest</p>
  <h2 class="section-title">Published conversations</h2>
  <p class="section-subtitle">Each post is a human-reviewed recap of an AI&ndash;human conversation. Approved by Reilly, published with context.</p>

  {% if posts | length == 0 %}
    <div class="empty-state">
      <p><strong>No posts have been published yet.</strong></p>
      <p>Approved stories will appear here as soon as Reilly gives the word.</p>
    </div>
  {% else %}
    <div class="posts-grid">
      {% for post in posts %}
        <article class="post-card">
          {# --- Per-post icon based on first tag --- #}
          {% set firstTag = post.data.tags[0] if (post.data.tags and post.data.tags.length > 0) else "recap" %}
          {% if firstTag == "philosophy" or firstTag == "simulation" %}
            <div class="post-card-icon post-card-icon--amber">&#x1F30C;</div>
          {% elif firstTag == "timeline" %}
            <div class="post-card-icon post-card-icon--violet">&#x1F916;</div>
          {% elif firstTag == "strategy" or firstTag == "ai-governance" %}
            <div class="post-card-icon post-card-icon--emerald">&#x1F3D7;&#xFE0F;</div>
          {% elif firstTag == "announcement" or firstTag == "meta" %}
            <div class="post-card-icon post-card-icon--sky">&#x1F44B;</div>
          {% else %}
            <div class="post-card-icon post-card-icon--sky">&#x1F4DD;</div>
          {% endif %}

          {% if post.data.tags and post.data.tags.length > 0 %}
            <p class="post-card-tag">{{ post.data.tags[0] }}</p>
          {% else %}
            <p class="post-card-tag">Recap</p>
          {% endif %}
          <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
          <p class="post-meta">{{ post.date | formatDate("MMMM d, yyyy") }}</p>
          {% if post.data.description %}
            <p class="post-card-description">{{ post.data.description }}</p>
          {% else %}
            <p class="post-card-description">Conversation recap.</p>
          {% endif %}
          {% if post.data.tags and post.data.tags.length > 0 %}
            <div class="post-card-tags">
              {% for tag in post.data.tags %}
                <span class="tag-pill">{{ tag }}</span>
              {% endfor %}
            </div>
          {% endif %}
          <span class="post-card-readmore">Read post &rarr;</span>
        </article>
      {% endfor %}
    </div>
  {% endif %}
</section>

